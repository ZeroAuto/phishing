<% @page_title = "Campaign Details" %>

<h2>Campaign Options - <%= @campaign.name %></h2>

<% if @campaign.launched = true %>
	<p>This campaign will be launched in <%= @days %> days <%= @hours %> hours <%= @minutes %> minutes and <%= @seconds_after_minutes %> seconds</p>
<% end %>

<div class="campaign settings"> 
  <%= nested_form_for(@campaign, :html => {:multipart => true}) do |f| %>
    <%= render partial: "campaigns/options", locals: {f: f} %>

    <%= render partial: "campaigns/buttons", locals: {campaign: @campaign} %>
  <% end %>

  <%= render partial: 'campaigns/blasts', locals: { campaign: @campaign } %>
</div>
